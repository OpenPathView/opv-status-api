import logging


class StoredHandler(logging.Handler):
    def __init__(self):
        logging.Handler.__init__(self)
        self.log_list = []

    def emit(self, record):
        self.log_list.append(record.msg)
        print(self.log_list)

    def getLog(self):
        return self.log_list
